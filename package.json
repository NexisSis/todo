{
  "name": "electron-vue-todo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A simple todo application built with Electron and Vue.js 3",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "electron:dev": "concurrently -k -s first \"vite\" \"wait-on tcp:${VITE_DEV_SERVER_PORT:-5173} && cross-env NODE_ENV=development electron . --inspect=5858\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build && cross-env NODE_ENV=production electron .",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "verify": "concurrently \"pnpm lint\" \"pnpm format:check\" \"pnpm test\""
  },
  "dependencies": {
    "pinia": "^3.0.1",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.27.0",
    "@eslint/js": "^9.24.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "@vue/test-utils": "^2.4.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "eslint": "^9.24.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.3.0",
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "vue-eslint-parser": "^10.1.3",
    "wait-on": "^8.0.3"
  }
}
